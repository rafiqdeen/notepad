<div class="new article col-md-6 col-md-offset-3 custom">
  <h2>
    Create your Note here:
  </h2>
  <div class="well">

    <%= form_for :article, url: articles_path do |f| %>
        <p>
          <%= f.label "Enter your title" %><br>
          <%= f.text_field :title, :class => "form-control" %>
        </p>

        <p>
          <%= f.label "Enter your description" %><br>
          <%= f.text_area :text, :class => "form-control", :rows => "10" %>
        </p>

        <p>
        <ul class="pager">
          <li class="center">


            <%= f.submit "Submit", :class=> "btn btn-primary" %>

            <%= link_to 'Back', articles_path %>
          </li>
        </ul>
        </p>
    <% end %>
  </div>
</div>
