<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= link_to user.id, user %>
        <%= link_to user.name, user %>
        <%= link_to user.email, user %>
      </li>
      <% if current_user.admin? && !current_user?(user) %>
          | <%= link_to "delete", user, method: :delete,
                        data: { confirm: "You sure?" } %>
      <% end %>
  <% end %>
</ul>

<%= will_paginate %>